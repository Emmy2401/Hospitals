name: CI pour le Backend (Spring Boot)

on:
  push:
    branches:
      - "main" # ou la branche que tu utilises pour déployer
  pull_request:
    branches:
      - "main"

jobs:
  build:
    runs-on: ubuntu-22.04

    steps:
      # 1. Récupérer le code du dépôt
      - name: Checkout code
        uses: actions/checkout@v3

      # 2. Configurer JDK (Java Development Kit) - Utiliser une version LTS (17 ou 21)
      - name: Set up JDK
        uses: actions/setup-java@v3
        with:
          distribution: 'temurin'  # ou adoptium (selon la distribution souhaitée)
          java-version: 23-ea

      # 3. Installer les dépendances avec Maven
      - name: Install dependencies (Maven)
        run: mvn install -DskipTests=true

      # 4. Exécuter les tests unitaires
      - name: Run tests
        run: mvn test

      # 5. Construire le projet pour générer l’artefact
      - name: Build backend
        run: mvn clean package -DskipTests=true

      # 6. (Optionnel) Publier les résultats de build comme artefact
      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: backend-artifact
          path: target/*.jar  # Ajustez si besoin selon votre configuration
